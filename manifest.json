{
    "manifest_version": 3,
    "name": "Simple YouTube Popups",
    "description": "Shows YouTube popups on a webpage",
    "version": "1.0",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }